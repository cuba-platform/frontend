{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "inquirer-autocomplete-prompt": ["custom_types/inquirer-autocomplete-prompt"],
      "yeoman-environment": ["custom_types/yeoman-environment"]
    }
  },
  "include": [
    "src/**/*.ts",
    "packages/**/index.ts",
    "custom_types/**/*.ts"
  ],
  "exclude": [
    "src/generators/*/*/template/**",
    "src/test/generated/**"
  ]
}
