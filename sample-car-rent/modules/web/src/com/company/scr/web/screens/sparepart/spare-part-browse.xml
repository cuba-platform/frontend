<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="sparePartsTable"
        messagesPack="com.company.scr.web.screens.sparepart">
  <data readOnly="true">
    <collection id="sparePartsDc"
                class="com.company.scr.entity.SparePart"
                view="_local">
      <loader id="sparePartsDl">
        <query>
          <![CDATA[select e from scr$SparePart e]]>
        </query>
      </loader>
    </collection>
  </data>
  <dialogMode height="600"
              width="800"/>
  <layout expand="sparePartsTable"
          spacing="true">
    <filter id="filter"
            applyTo="sparePartsTable"
            dataLoader="sparePartsDl">
      <properties include=".*"/>
    </filter>
    <groupTable id="sparePartsTable"
                width="100%"
                dataContainer="sparePartsDc">
      <actions>
        <action id="create" type="create"/>
        <action id="edit" type="edit"/>
        <action id="remove" type="remove"/>
      </actions>
      <columns>
        <column id="name"/>
        <column id="partId"/>
        <column id="currentStock"/>
        <column id="localDate"/>
        <column id="localTime"/>
        <column id="localDateTime"/>
        <column id="offsetDateTime"/>
        <column id="offsetTime"/>
      </columns>
      <rowsCount/>
      <buttonsPanel id="buttonsPanel"
                    alwaysVisible="true">
        <button id="createBtn" action="sparePartsTable.create"/>
        <button id="editBtn" action="sparePartsTable.edit"/>
        <button id="removeBtn" action="sparePartsTable.remove"/>
      </buttonsPanel>
    </groupTable>
    <hbox id="lookupActions" spacing="true" visible="false">
      <button action="lookupSelectAction"/>
      <button action="lookupCancelAction"/>
    </hbox>
  </layout>
</window>
