<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://embeddedTestEntityBrowse.caption"
        focusComponent="embeddedTestEntitiesTable"
        messagesPack="com.company.scr.web.screens.embeddedtestentity">
    <data readOnly="true">
        <collection id="embeddedTestEntitiesDc"
                    class="com.company.scr.entity.test.EmbeddedTestEntity">
            <view extends="_local">
                <property name="embedded" view="_minimal"/>
            </view>
            <loader id="embeddedTestEntitiesDl">
                <query>
                    <![CDATA[select e from scr_EmbeddedTestEntity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="embeddedTestEntitiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="embeddedTestEntitiesTable"
                dataLoader="embeddedTestEntitiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="embeddedTestEntitiesTable"
                    width="100%"
                    dataContainer="embeddedTestEntitiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="ownAttribute"/>
                <column id="embedded.name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="embeddedTestEntitiesTable.create"/>
                <button id="editBtn" action="embeddedTestEntitiesTable.edit"/>
                <button id="removeBtn" action="embeddedTestEntitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
