<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://embeddedTestEntityEdit.caption"
        focusComponent="form"
        messagesPack="com.company.scr.web.screens.embeddedtestentity">
    <data>
        <instance id="embeddedTestEntityDc"
                  class="com.company.scr.entity.test.EmbeddedTestEntity">
            <view extends="_local">
                <property name="embedded" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="embeddedTestEntityDc">
            <column width="350px">
                <textField id="ownAttributeField" property="ownAttribute"/>
                <textField id="embeddedNameField" property="embedded.name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
